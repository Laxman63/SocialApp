<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F36874">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/linearsocial"
           android:layout_marginTop="30dp"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:id="@+id/facebook"
               android:layout_marginLeft="10dp"
               android:layout_height="70dp"
               app:srcCompat="@drawable/facebook"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginLeft="29dp"
               android:id="@+id/google"
               android:layout_height="70dp"
               app:srcCompat="@drawable/google"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginLeft="38dp"
               android:layout_height="70dp"
               android:id="@+id/twitter"
               app:srcCompat="@drawable/twitter"/>
       </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearsocial"
            android:background="@drawable/input"
            android:id="@+id/loginemail"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:drawablePadding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/loginPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginemail"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/input"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawableEnd="@drawable/ic_visibility_black_24dp"
            android:drawablePadding="15dp"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textCursorDrawable="@color/colorPrimaryDark" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginPass"
            android:id="@+id/forgetpass"
            android:text="forget Password"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_below="@id/forgetpass"
            android:text="LOGIN"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:textColor="@color/cardview_light_background"
            android:background="@drawable/button"
            android:layout_marginRight="120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:id="@+id/newAccount"
            android:text="need new Account?"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginLeft="140dp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/newAccount"
            android:id="@+id/loginwith"
            android:text="or Login Using Your"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_marginLeft="120dp"
            android:textColor="@color/colorPrimary"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PhoneButton"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_below="@id/loginwith"
            android:text="Phone"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/cardview_light_background"
            android:drawableStart="@drawable/ic_smartphone_black_24dp"
            android:padding="15dp"
            android:background="@drawable/button"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="120dp"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>